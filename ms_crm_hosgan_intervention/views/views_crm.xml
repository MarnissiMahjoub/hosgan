<odoo>
    <data>
        <record id="crm_lead_view_form_inherti_ms" model="ir.ui.view">
            <field name="name">crm.lead.view.form.inherit.website.crm.ms</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_schedule_meeting']" position="after">
                    <button name="intervention" type="object" class="oe_stat_button" icon="fa-tags">
                        <field name="intervention_number" widget="statinfo" string="Hosgan Intervention"/>
                    </button>

                    <button name="wizard_ordonnance_medicament" string ="Ordonnance Medicale (Medicament)" type="object" class="oe_stat_button" icon="fa-tags"/>

                    <button name="wizard_ordonnance_medicale" string ="Ordonnance Medicale" type="object" class="oe_stat_button" icon="fa-tags"/>
                    <button name="wizard_bilan" string="Bilans PRÉ-OPÉRATOIRES" type="object" class="oe_stat_button" icon="fa-tags"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
