<odoo>
    <data>

        <!-- Action du rapport Bilan -->
        <record id="action_report_bilan" model="ir.actions.report">
            <field name="name">Bilan Médical</field>
            <field name="model">wizard.ordonnance</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ms_crm_hosgan_intervention.report_bilan_template</field>
            <field name="report_file">ms_crm_hosgan_intervention.report_bilan_template</field>
            <field name="print_report_name">'Bilan Médical'</field>
            <field name="binding_type">report</field>
        </record>

        <!-- Template du rapport bilan -->
        <template id="report_bilan_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">

                            <!-- En-tête -->
                            <div class="row">
                                <div class="col-8">
                                    <h3 style="text-align: center;">
    <strong>ORDONNANCE MÉDICALE</strong>
</h3>

                                    <p>
                                        <strong>Patient(e) :</strong>
                                        <span t-esc="o.partner_id.name"></span>
                                    </p>
                                    <p>
                                        <strong>Date :</strong>
                                        <span t-esc="o.date"></span>
                                    </p>
                                    <p>
                                        <strong>Médecin :</strong>
                                        <span t-esc="o.medecin_id.name"></span>
                                    </p>
                                </div>
                            </div>

                            <!-- Détails des lignes -->
                            <t t-if="o.ordonnance_line_ids">
<!--                                <ul>-->
                                    <!-- Boucle sur les catégories distinctes -->
<t t-if="o.ordonnance_line_ids">
    <!-- Étape 1 : extraire les lignes validées -->
    <t t-set="done_lines" t-value="o.ordonnance_line_ids.filtered(lambda l: l.done)"/>

    <!-- Étape 2 : extraire les catégories distinctes à partir des bilans validés -->
    <t t-set="categories" t-value="list(set(done_lines.mapped('bilan_id.categorie')))"/>

    <ul>
        <!-- Étape 3 : boucle sur chaque catégorie -->
        <t t-foreach="categories" t-as="category">
            <li>
                <strong><span t-esc="category if category else 'Sans catégorie'"/></strong>
                <ul>
                    <!-- Étape 4 : afficher les bilans associés à cette catégorie -->
                    <t t-foreach="done_lines.filtered(lambda l: l.bilan_id.categorie == category)" t-as="line">
                        <li><span t-esc="line.bilan_id.name"/></li>
                    </t>
                </ul>
            </li>
        </t>
    </ul>
</t>
<!--                                </ul>-->
                            </t>


                          <!-- Signature -->
                    <p style="margin-top: 40px;">
                        <strong>Signature du médecin :</strong>
                    </p>
<!--                    <p>-->
<!--                        <strong><span t-esc="o.medecin_id.name"/></strong>-->
<!--                    </p>-->

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
